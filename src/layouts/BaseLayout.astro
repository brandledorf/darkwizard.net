---
import Logo from "./word-art.png";

export interface Props {
    title?: string;
}

const props = Astro.props as Props;
const defaultTitle = "The Dark Wizard Brandledorf";
const title = props.title
    ? props.title.concat(" ‚ú´ ", defaultTitle)
    : defaultTitle;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Grenze+Gotisch:wght@500&family=JetBrains+Mono&family=Source+Serif+Pro:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />
    </head>

    <body>
        <a href="/">
            <img class="logo" src={Logo} alt="" />
        </a>
        <nav class="nav">
            <a href="/whomst">Whomst</a>
            <a href="/incantations">Incantations</a>
            <a href="/aberrations">Aberrations</a>
        </nav>
        <div class="pageContainer">
            <slot />
        </div>
        <style is:global>
            ::selection {
                background-color: #31011a;
                color: #d058ac;
                text-shadow: none;
            }

            html {
                /*18px*/
                font-size: 112.5%;
            }

            body {
                background-color: #160022;
                color: #f0e3f0;
                font-family: "Source Serif Pro", system-ui, -apple-system,
                    BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
                    Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
                line-height: 1.75;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                font-weight: 400;
                line-height: 1.3;
                font-family: "Grenze Gotisch";
                margin: 3rem 0 1.38rem;
            }

            h1 {
                line-height: 1;
                margin-top: 0;
                font-size: 4.209rem;
                color: #f5f8ff;
                text-shadow: 0px 7px 1px #510c43;
            }

            h2 {
                font-size: 3.157rem;
                text-shadow: 0px 6px 1px #510c43;
            }

            h3 {
                font-size: 2.369rem;
                text-shadow: 0px 5px 1px #510c43;
            }

            h4 {
                font-size: 1.777rem;
                text-shadow: 0px 4px 1px #510c43;
            }

            h5 {
                font-size: 1.333rem;
                text-shadow: 0px 3px 1px #510c43;
            }

            a {
                color: #dbd826;
                text-shadow: 0px 0px 21px #001cff;
                transition: all 0.2s cubic-bezier(0.23, 1, 0.32, 1);
            }

            a:hover {
                color: #fffb01;
                text-shadow: 0px 0px 31px #00e7ff;
            }

            .nav {
                display: flex;
                max-width: 420px;
                margin: 0 auto 2em;
                justify-content: space-around;
            }

            /* 
    ul {
        list-style: none;
    }

    ul li::before {
        content: 'ñ§ê';
        font-size: .75em;
        color: #756;
        margin-right: 1ch;
    } */

            ol {
                list-style-type: hiragana-iroha;
            }

            .astro-code {
                border: 2px outset #71397d;
                border-radius: 26px;
                padding: 1em;
                box-shadow: 0px 12px 31px #391335;
                font-size: 0.875rem;
                line-height: 1.2;
            }

            .astro-code code {
                font-family: "JetBrains Mono";
            }

            .logo {
                display: block;
                max-width: 420px;
                margin: 42px auto;
            }

            .pageContainer {
                margin-top: 1rem;
                max-width: 769px;
                margin-left: auto;
                margin-right: auto;
            }
        </style>
    </body>
</html>
